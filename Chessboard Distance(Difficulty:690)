import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		while(T-->0)
		{
		    int X1=sc.nextInt();
		    int Y1=sc.nextInt();
		    int X2=sc.nextInt();
		    int Y2=sc.nextInt();
		    int m1=Math.abs(X1-X2);
		    int m2=Math.abs(Y1-Y2);
		    int m=Math.max(m1,m2);
		    System.out.println(m);
		
		    
		}

	}
}
