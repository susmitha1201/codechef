import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		int n1=0;
		int n2=0;
		while(T-->0)
		{
		    int N=sc.nextInt();
		    n1=(N/4);
		    n2=(N%4)/2;
		    System.out.println(n1+n2);
		}

	}
}
