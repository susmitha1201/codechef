import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		while(T-->0)
		{
		    int X=sc.nextInt();
		    int Y=sc.nextInt();
		    int x1=3*X;
		    int y1=2*Y;
		    if(x1<=y1)
		    {
		        System.out.println(x1);
		    }
		    else
		    {
		        System.out.println(y1);
		    }
		}

	}
}
